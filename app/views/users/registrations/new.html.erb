<div class="session-form">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="heading"><h2><%= t :sign_up %></h2></div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="panel-body">
          <%= f.error_notification %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: (t(:password_minimum, min_length: @minimum_password_length) if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>

          <div class="form-group form-actions">
            <%= f.button :submit, t(:sign_up), :class => "btn btn-primary", 'data-disable-with' => "正在提交" %>
          </div>
        </div>
    <% end %>
    <div class="panel-footer">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>